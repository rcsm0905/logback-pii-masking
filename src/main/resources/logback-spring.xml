<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!-- Define the property once at the top -->
  <springProperty scope="context" name="logMaskFields" source="LOG_MASK_FIELDS"
    defaultValue="imageContent,ocrResult,ocrResultFormat,ocrResultDetail,CROPPED_FACE_FROM_DOC"/>

  <!-- Local: Pretty-printed JSON for readability -->
  <springProfile name="local">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
      <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
        <layout class="com.example.logging.JsonStructuredLayout">
          <prettyPrint>true</prettyPrint>
          <maskingLayout class="com.example.logging.PiiDataMasker">
            <maskedFields>${logMaskFields}</maskedFields>   <!-- mandatory -->
            <maskToken>[REDACTED]</maskToken>   <!-- mandatory -->
            <maxMessageSize>1048576</maxMessageSize>   <!-- mandatory -->
          </maskingLayout>
        </layout>
      </encoder>
    </appender>
  </springProfile>

  <!-- Default: Compact JSON for CloudWatch/Lambda -->
  <springProfile name="!local">
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
      <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
        <layout class="com.example.logging.JsonStructuredLayout">
          <prettyPrint>false</prettyPrint>
          <maskingLayout class="com.example.logging.PiiDataMasker">
            <maskedFields>${logMaskFields}</maskedFields>   <!-- mandatory -->
            <maskToken>[REDACTED]</maskToken>   <!-- mandatory -->
            <maxMessageSize>1048576</maxMessageSize>   <!-- mandatory -->
          </maskingLayout>
        </layout>
      </encoder>
    </appender>
  </springProfile>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>